<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{title}}
    </h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{content}}
    </p>
  </div>
</div>

<div class="post-comments">
  <h4>Comments:</h4>
  {{#each comments as |comment|}} 
    <div class="comment">
      <p>{{comment.content}}</p>
      <p>Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
  {{/each}}
</div>


{{#if logged_in}}

<div class="add-comment">
      <h4>Add a Comment:</h4>
      <form class="comment-form new-comment">
        <div class="form-group">
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
       <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      </form>


</div>

{{/if}}

<script src="/js/comment.js"></script>